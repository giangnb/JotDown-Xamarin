<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JotDown.TodoDetail"
             Title="TodoDetail">
    <StackLayout VerticalOptions="FillAndExpand">
        <StackLayout Orientation="Horizontal"
                     BackgroundColor="#d3d3d3" 
                     Padding="10,10,10,5" Spacing="20">
            <Label Text="" HorizontalOptions="StartAndExpand" />
            <Button x:Name="BtnEdit"
                    Text="Edit"
                    Clicked="BtnEdit_OnClicked"
                    HorizontalOptions="End"/>
            <Button x:Name="BtnDelete"
                    TextColor="Maroon"
                    Text="Delete"
                    Clicked="BtnDelete_OnClicked"
                    HorizontalOptions="End"/>
        </StackLayout>

        <ScrollView VerticalOptions="FillAndExpand" Padding="10">
            <Label x:Name="TxtContent"
                   Text="" TextColor="Black"
                   LineBreakMode="WordWrap" />
        </ScrollView>

    </StackLayout>
</ContentPage>